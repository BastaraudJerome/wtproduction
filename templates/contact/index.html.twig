{% extends 'contact/layout.html.twig' %}

{% block title %}
    Contacter Nous
{% endblock %}

{% block body %}
    <div class="container" style="padding-top:100px">
        <h2 class="my-2">
            Contacter nous !
            
        </h2>
        {% for label, messages in app.flashes(['success', 'warning']) %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show mt-3" role="alert">
                    {{ message }}
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        {{ form_start(form) }}

        <div class="row">
            {% if app.user == true %}
                <div class="d-none">
                    {{ form_row(form.email, {value : app.user.email}) }}
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom, {value : app.user.name}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        {{ form_label(form.prenom) }}
                        {{ form_widget(form.prenom, {value : app.user.firstname}) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>
            {% else %}
                <div class="col-12 col-md-4">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom) }}
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        {{ form_label(form.prenom) }}
                        {{ form_widget(form.prenom) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="row">
            <div class="col-12 form-group">
                {{ form_row(form.sujet) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12 form-group">
                {{ form_row(form.message) }}
            </div>
        </div>
        <button type="submit" class="btn btn-success mt-3">
            Envoyer
                
            
        </button>

    </div>

    {{ form_end(form) }}
{% endblock %}

